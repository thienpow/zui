{
  "redis": {
    "host": "127.0.0.1",
    "port": 6379,
    "max_connections": 10
  },
  "security": {
    "on_https": false,
    "middleware": {
      "protected_routes": [
        {
          "prefix": "/admin",
          "strategies": ["oauth", "session"],
          "required_roles": ["admin"]
        },
        {
          "prefix": "/api/private",
          "strategies": ["jwt"],
          "required_roles": ["api_user"]
        },
        {
          "prefix": "/api/webhook",
          "strategies": ["api_key"],
          "required_roles": null
        },
        {
          "prefix": "/user/profile",
          "strategies": ["session"],
          "required_roles": ["user"]
        },
        {
          "prefix": "/api/public",
          "strategies": ["jwt"],
          "required_roles": null
        }
      ],
      "login_redirect_url": "/auth/login",
      "use_return_to": true,
      "api_error_message": "Authentication required"
    },
    "session": {
      "max_sessions_per_user": 5,
      "cookie_name": "session_token",
      "cookie_domain": "127.0.0.1",
      "session_ttl": 86400,
      "refresh_threshold": 3600,
      "cleanup_interval": 3600
    },
    "storage": {
      "storage_type": "both",
      "cleanup_batch_size": 1000
    },
    "token": {
      "access_token_ttl": 900,
      "refresh_token_ttl": 604800,
      "token_length": 48
    },
    "rate_limit": {
      "max_attempts": 5,
      "window_seconds": 300,
      "lockout_duration": 900
    },
    "audit": {
      "enabled": true,
      "high_risk_events": ["login_failed", "password_changed", "mfa_disabled"],
      "notify_admins": true,
      "store_type": "both",
      "log_retention_days": 90
    },
    "oauth": {
      "enabled": true,
      "state_cookie_name": "session_token",
      "state_cookie_max_age": 600,
      "default_redirect": "/admin/dashboard",
      "user_auto_create": true,
      "user_auto_login": true,
      "providers": [
        {
          "provider": "google",
          "name": "Google",
          "client_id": "460727759418-j1oifede684t7m044pmo30mpb619e3bs.apps.googleusercontent.com",
          "client_secret": "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",
          "auth_url": "https://accounts.google.com/o/oauth2/v2/auth",
          "token_url": "https://oauth2.googleapis.com/token",
          "userinfo_url": "https://www.googleapis.com/oauth2/v3/userinfo",
          "redirect_uri": "http://localhost:8080/auth/oauth/callback/google",
          "scope": "email profile",
          "enabled": true
        },
        {
          "provider": "github",
          "name": "GitHub",
          "client_id": "Ov23liJ9D0ig1Hrhwvyv",
          "client_secret": "2727d61de936b59c25f81f4adf4b93306f44ce96",
          "auth_url": "https://github.com/login/oauth/authorize",
          "token_url": "https://github.com/login/oauth/access_token",
          "userinfo_url": "https://api.github.com/user",
          "redirect_uri": "http://localhost:8080/auth/oauth/callback/github",
          "scope": "user:email",
          "enabled": true
        },
        {
          "provider": "custom",
          "name": "Custom Provider",
          "client_id": "CUSTOM_CLIENT_ID",
          "client_secret": "CUSTOM_CLIENT_SECRET",
          "auth_url": "https://custom-provider.com/oauth/authorize",
          "token_url": "https://custom-provider.com/oauth/token",
          "userinfo_url": "https://custom-provider.com/oauth/userinfo",
          "redirect_uri": "http://localhost:8000/auth/oauth/callback/custom",
          "scope": "profile email",
          "custom_provider_id": "custom-provider",
          "enabled": false
        }
      ]
    }
  }
}
